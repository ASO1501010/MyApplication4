<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/buutomcolor"
        card_view:cardCornerRadius="4dp">

        <!-- カードに載せる情報 -->

        <RelativeLayout
            android:id="@+id/cardRelative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <requestFocus />
            </TextView>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="30dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="名前"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="231dp"
                    android:layout_marginLeft="231dp"
                    android:layout_marginBottom="61dp"
                    app:srcCompat="@drawable/error3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_marginLeft="115dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_namesub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/namesub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ふりがな"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="60dp"
                    app:srcCompat="@drawable/error3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginLeft="65dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_studentsnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="7"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/studentsnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="学籍番号"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="231dp"
                    android:layout_marginLeft="231dp"
                    android:layout_marginBottom="61dp"
                    app:srcCompat="@drawable/error3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginLeft="65dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="現住所"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="231dp"
                    android:layout_marginLeft="231dp"
                    android:layout_marginBottom="61dp"
                    app:srcCompat="@drawable/error3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_marginLeft="115dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_address_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/address_return"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="帰省先"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="60dp"
                    app:srcCompat="@drawable/error3" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginLeft="65dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="8"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="生年月日 "
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon6"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="231dp"
                    android:layout_marginLeft="231dp"
                    android:layout_marginBottom="61dp"
                    app:srcCompat="@drawable/error3" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="65dp">

                <RadioGroup
                    android:id="@+id/sex"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    tools:ignore="RtlCompat">

                    <RadioButton
                        android:id="@+id/man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="男性" />

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="女性" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginLeft="65dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="11"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="携帯番号(ハイフンなし)"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon7"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="231dp"
                    android:layout_marginLeft="231dp"
                    android:layout_marginBottom="61dp"
                    app:srcCompat="@drawable/error3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_marginLeft="115dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_home_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/home_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="自宅番号(ハイフンなし)"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon8"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="60dp"
                    app:srcCompat="@drawable/error3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginLeft="65dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_mailaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/mailaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="メールアドレス" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon9"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="231dp"
                    android:layout_marginLeft="231dp"
                    android:layout_marginBottom="61dp"
                    app:srcCompat="@drawable/error3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginLeft="65dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/teacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="担任"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/icon10"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="231dp"
                    android:layout_marginLeft="231dp"
                    android:layout_marginBottom="61dp"
                    app:srcCompat="@drawable/error3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="112dp">

                <Button
                    android:id="@+id/completebutton"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="登録"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/nagamaru"
                    android:textColor="#FFF"
                    android:onClick="completeInput" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>